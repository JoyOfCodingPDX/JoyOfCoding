<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

  <!-- Servlets -->
  <servlet>
    <servlet-name>airlinesServlet</servlet-name>
    <servlet-class>edu.pdx.cs410J.airlinegwt.server.AirlineServiceImpl</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>airlinesServlet</servlet-name>
    <url-pattern>/airline/airline</url-pattern>
  </servlet-mapping>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>AirlineGwt.html</welcome-file>
  </welcome-file-list>
</web-app>
